<%= title pl(:translation) %>

<%= render 'translations', translations:@translations if @translations.keys.present? %>

<%= subtitle new(:translation) %>

<%= simple_form_for @translation do |f| %>
  <%= f.input :key, wrapper_html:{id:'key'} %>
  <%= f.input :value, wrapper_html:{id:'value'} %>
  <%= f.input :locale_token, wrapper_html:{id:'locale'}, label:t(:locale), input_html:{data:{url:locales_path(:format=>:json)}} %>
  <%= f.submit %>
<% end %>
