<% present @kanji do |presenter| %>
  <%= title @kanji.symbol %>

  <div id="meanings">
    <%= presenter.comma_separated_meanings %>
  </div>

  <%= render 'sentences/glossaries', glossaries:@kanji.glossaries if @kanji.glossaries.present? %>

  <%= render 'similars', similars:@kanji.similars if @kanji.similars.present? %>

  <div id="bottom_links">
    <%= presenter.edit_link %>
  </div>
<% end %>
