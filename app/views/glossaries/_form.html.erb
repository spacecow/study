<%= simple_form_for glossary do |f| %>
  <%= f.input :content %>
  <%= f.input :reading %>
  <%= f.input :forms %>
  <%= f.input :sound %>
  <%= f.input :sentence_tokens, input_html:{data:{pre:glossary.sentences, url:sentences_path(:format=>:json)}} %>
  <%= f.input :synonym_tokens, input_html:{data:{pre:glossary.synonyms, url:glossaries_path(format: :json)}} %>
  <%= f.input :similar_tokens, input_html:{data:{pre:glossary.similars, url:glossaries_path(format: :json)}} %>
  <%= f.input :antonym_tokens, input_html:{data:{pre:glossary.antonyms, url:glossaries_path(format: :json)}} %>
  <%= f.button :submit %>
<% end %>
