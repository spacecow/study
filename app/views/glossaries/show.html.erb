<%= title @glossary.content %>

<% present @glossary do |presenter| %>

<div class="glossary">
  <%= presenter.parenthesis %>
  <%= presenter.sentences %>

  <%= presenter.kanjis(@glossary) %>

  <%= presenter.synonyms %>
  <%= presenter.similars %>
  <%= presenter.antonyms %>

  <div class="footer">
    <%= presenter.edit_link %>
  </div>
</div>

<% end %>

<br>
<%= audio_tag @glossary.sound, controls:true %>
