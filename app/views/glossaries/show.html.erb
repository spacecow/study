<%= title @glossary.content %>

<% present @glossary do |presenter| %>

<div class="glossary">
  <%= presenter.meaning %>
  <%= presenter.sentences %>

  <%= presenter.kanjis(@glossary) %>

  <%= presenter.synonyms %>
  <%= presenter.similars %>
  <%= presenter.antonyms %>

  <div class="footer">
    <%= presenter.edit_link %>
  </div>
</div>

<% end %>
